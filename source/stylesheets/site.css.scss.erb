$vars: (
    font-family: sans-serif,
    font-size:18px,
    line-height: 30px,

    primary: #000,

    background: #fff,
    background-light: #eee,

    width: 1200px

);

:root {
    --font-family: map-get($vars, font-family);
    --font-size: map-get($vars, font-size);
    --line-height: map-get($vars, line-height);
    --primary: map-get($vars, primary);
    --background: map-get($vars, background);
    --background-light: map-get($vars, background-light);
    --width: map-get($vars, width);
}

@mixin var($property, $varName) {
#{$property}: map-get($vars, $varName);
#{$property}: var(--#{$varName}, map-get($vars, $varName));
}

// Global style :
body {
    margin: 0;
    position: absolute;
    @include var(background-color, background);
    @include var(font-family, font-family);
    @include var(color, primary);
    @include var(font-size, font-size);
    text-rendering: optimizelegibility;
    @include var(line-height, line-height);
    width: 100%;
}

header {
    width: 100%;
    nav {
        display: flex;
        justify-content: space-around;
        height: auto;
        flex-wrap: wrap;
        a {
            text-decoration: none;
            @include var(color, primary);
            margin: 5px 5%;
            font-size: 1.3em;
            text-transform: uppercase;
            text-align: center;
            p, h1 {
                margin: 0;
                font-size: inherit;
            }
        }
        .site-title {
            font-weight: bold;
            width: 100%;
        }
    }
    input, label {
        display: none;
    }
}

.old_articles {
    display: none;
    justify-content: space-around;
    color: #000;
    a {
        width: inherit;
        text-align: center;
        padding: 0 10px;
        border: 1px black;
        border-style: none solid;
    }
}
#showold {
    display: block;
    text-align: center;
    cursor: pointer;
    background-color: #f3f3f3;
    width: 300px;
    margin: auto;
}
#showold:after {
    content: " +";
}
#showold-trigger {
    display: none;
}
#showold-trigger:checked ~ .old_articles {
    display: flex;
    margin-bottom: 30px;
    flex-wrap: wrap;
    min-height: inherit;
    margin-bottom: 30px;
    flex-wrap: wrap;
}
#showold-trigger:checked ~ #showold:after {
    content: " Ã—";
}

section {
    @include var(max-width, width);
    margin: 20px auto 20px auto;
    padding: 20px;
    vertical-align: middle;
    color: #fff;
    background-size:cover;
    background-position: center;
    a {
        color: inherit;
    }
    a:hover {
        @include var(color, primary);
    }
    h2, time {
        text-transform: uppercase;
        margin: 0;
    }
    time a {
        text-decoration: none;
    }
}
h1 {
    text-align: center;
    text-transform: uppercase;
    font-size: 1.5em;
    margin-bottom: 0;
}
article {
    margin: auto;
    @include var(max-width, width);
    line-height: 1.5em;
    time {
        text-align: center;
        text-transform: uppercase;
        display: block;
    }
    h1 {
        font-size: 1.5em;
        margin-bottom: 0;
    }
    h2 {
        font-size: 1.2em;
        padding: 0 5px;
    }
    h3, h4, h5 {
        font-size: 1em;
        padding: 0 5px;
    }
    .article_img {
        background-size:cover;
        height: 100px;
    }
    .img_top {
        background-position: center;
    }
    .img_bot {
        background-position: 0% 80%;
    }
    img {
        max-width: 100%;
    }
    p {
        padding: 0 10px;
    }
    .footnotes {
        border-top: solid 1px;
    }
}

footer {
    text-align: center;
}

