$text-color: #000;
$gap: 10px;
$text_font: "Open Sans", "Gill Sans MT", "Gill Sans", Arial, sans-serif;
$width: 1200px;

body {
    margin: 0;
    position: absolute;
    background: #fff;
    font-family: $text_font;
    width: 100%;
}

header {
    width: 100%;
    nav {
        display: flex;
        justify-content: space-around;
        height: 50px;
        a {
            text-decoration: none;
            color: $text-color;
            margin: auto;
            font-size: 1.3em;
            text-transform: uppercase;
            text-align: center;
            p {
                margin: 0;
                font-size: inherit;
            }
        }
        .site-title {
            font-weight: bold;
        }
    }
    input, label {
        display: none;
    }
}
h1 {
    text-align: center;
    text-transform: uppercase;
    font-size: 1.5em;
    margin-bottom: 0;
}
.subtitle {
    text-align: center;
    margin-top: 0;
}
section {
    max-width: $width;
    margin: $gap auto $gap auto;
    padding: 0 20px;
    min-height: 25vh;
    display: flex;
    vertical-align: middle;
    color: #fff;
    font-size: 1.1em;
    a {
        color: inherit;
        text-decoration: none;
        text-transform: uppercase;
        width: 30%;
    }
    a:hover {
        color: #333;
    }
    background-size:cover;
    background-position: center;
}
.old_articles {
    display: none;
    justify-content: space-around;
    color: #000;
    a {
        width: inherit;
        text-align: center;
        padding: 0 10px;
        border: 1px black;
        border-style: none solid;
    }
}
#showold {
    display: block;
    text-align: center;
    cursor: pointer;
    background-color: #f3f3f3;
    width: 300px;
    margin: auto;
}
#showold:after {
    content: " +";
}
#showold-trigger {
    display: none;
}
#showold-trigger:checked ~ .old_articles {
    display: flex;
    margin-bottom: 30px;
    flex-wrap: wrap;
    min-height: inherit;
    margin-bottom: 30px;
    flex-wrap: wrap;
}
#showold-trigger:checked ~ #showold:after {
    content: " Ã—";
}
.section_content {
    margin: auto;
    width: 70%;
    p {
        margin: 0;
    }
    .more {
        display: block;
        margin: 10px 0;
    }
}
footer {
    text-align: center;
    a {
        color: #000;
    }
}

article {
    margin: auto;
    max-width: $width;
    line-height: 1.5em;
    font-size: 1.1em;
    time {
        text-align: center;
        text-transform: uppercase;
        display: block;
    }
    h1 {
        font-size: 1.5em;
        margin-bottom: 0;
    }
    h2 {
        font-size: 1.2em;
        padding: 0 5px;
    }
    h3, h4, h5 {
        font-size: 1em;
        padding: 0 5px;
    }
    .article_img {
        background-size:cover;
        height: 100px;
    }
    .img_top {
        background-position: center;
    }
    .img_bot {
        background-position: 0% 80%;
    }
    p {
        padding: 0 10px;
    }
}

@media screen and (max-width: 600px)
{
    header {
        nav {
            height: auto;
            flex-wrap: wrap;
            a {
                margin: 5px 5%;
            }
            .site-title {
                width: 100%;
            }
        }
    }
    section {
        flex-direction: column;
        a, .section_content {
            width: inherit;
        }
        h2 {
            margin-bottom: 0;
        }
        time {
            margin-bottom: 10px;
        }
    }
    article {
        h1 {
            margin-top: 5px;
        }
    }
}
