$text-color: #000;
$gap: 10px;
$text_font: "Open Sans", "Gill Sans MT", "Gill Sans", Arial, sans-serif;
$width: 1200px;

body {
    margin: 0;
    position: absolute;
    background: #fff;
    font-family: $text_font;
    width: 100%;
}

header {
    width: 100%;
    nav {
        display: flex;
        justify-content: space-around;
        height: 50px;
        a {
            text-decoration: none;
            color: $text-color;
            margin: auto;
            font-size: 1.3em;
            text-transform: uppercase;
            text-align: center;
            p {
                margin: 0;
                font-size: inherit;
            }
            .site-title {
                font-weight: bold;
            }
        }
    }
}
h1 {
    text-align: center;
    text-transform: uppercase;
    font-size: 1.5em;
}
section {
    max-width: $width;
    margin: $gap auto $gap auto;
    padding: 0 20px;
    min-height: 25vh;
    display: flex;
    vertical-align: middle;
    color: #fff;
    font-size: 1.1em;
    a {
        color: inherit;
        text-decoration: none;
        text-transform: uppercase;
        width: 30%;
    }
    a:hover {
        color: #333;
    }
    background-size:cover;
    background-position: center;
}
.old_articles {
    display: flex;
    justify-content: space-around;
    color: #000;
    min-height: inherit;
    margin-bottom: 30px;
    flex-wrap: wrap;
    height: 0px;
    overflow: hidden;
    a {
        width: inherit;
        text-align: center;
        padding: 0 10px;
        border: 1px black;
        border-style: none solid;
    }
}
#showold {
    width: 100%
}
#showold:focus + .old_articles {
    height: auto;
    overflow: visible;
}
#showold:focus {
    display: none;
}
.section_content {
    margin: auto;
    width: 70%;
    p {
        margin: 0;
    }
    .more {
        display: block;
        margin: 10px 0;
    }
}
footer {
    text-align: center;
    a {
        color: #000;
    }
}

article {
    margin: auto;
    max-width: $width;
    line-height: 1.5em;
    font-size: 1.1em;
    time {
        text-align: center;
        text-transform: uppercase;
        display: block;
    }
    h1 {
        margin-bottom: 0;
    }
    h1 {
        font-size: 1.5em;
    }
    h2 {
        font-size: 1.2em;
    }
    h3, h4, h5 {
        font-size: 1em;
    }
    .article_img {
        background-size:cover;
        height: 100px;
    }
    .img_top {
        background-position: center;
    }
    .img_bot {
        background-position: 0% 80%;
    }
}

