<%
if (current_page.data.title)
    title = current_page.data.title + " | " + data.config['blog']['title']
else
    title = data.config['blog']['title'] + " | " + data.config['blog']['subtitle']
end %>
<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="x-ua-compatible" content="ie=edge">
        <meta name="viewport"
              content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <title><%= title %></title>
        <%= stylesheet_link_tag "site" %>
    </head>
    <body>
        <header>
            <nav>
                <a href="<%= data.config['blog']['url'] %>"><p class="site-title"><%= data.config['blog']['title'] %></p></a>
                <% data.config['header'].each do |link| %>
                    <a href="<%= link[1] %>"><p><%= link[0] %></p></a>
                <% end %>
            </nav>
        </header>

        <%= yield %>

        <footer>
            <p><%= data.config['blog']['footer'] %></p>
        </footer>
    </body>
</html>
